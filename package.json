{
  "name": "yason",
  "version": "0.1.0",
  "description": "Yason is a lightweight data-interchange format. Designed to be easy for humans and machines to write and understand.",
  "author": "Peter West",
  "license": "MIT",
  "type": "module",
  "main": "./build/code/index.js",
  "exports": {
    "import": "./build/code/index.js",
    "require": "./build/wrapper.cjs"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "audit-dependencies": "pnpm audit --prod",
    "build": "rm -rf build/code && tsup src/index.ts --format cjs,esm --dts --out-dir build/code",
    "lint:ts": "eslint .",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "test:snippets": "test-snippets"
  },
  "dependencies": {
    "lodash": "^4.17.20"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.1",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.8.0",
    "multiline-ts": "^2.2.0",
    "sinon-assert-stub": "^1.2.0",
    "sinon-mocha-test": "^1.2.0",
    "test-snippets": "^2.0.0",
    "tsup": "^8.2.3",
    "tsx": "^4.16.5",
    "typescript": "^4.3.2",
    "vitest": "^2.0.5"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:peterjwest/yason.git"
  },
  "bugs": {
    "url": "https://github.com/peterjwest/yason/issues"
  },
  "homepage": "https://github.com/peterjwest/yason#readme",
  "keywords": [
    "json",
    "yason",
    "yaml",
    "parser",
    "encode",
    "stringify",
    "data",
    "format"
  ]
}
